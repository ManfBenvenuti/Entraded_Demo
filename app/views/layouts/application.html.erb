<!DOCTYPE html>
<html>
<head>
  <title>EntradedDemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<!-- Chiama il file partial _header individuandone il relative path -->
	<%= render "layouts/header" %>
	<div class="container">
		
		<!-- Enables flash messages to users with bootstrap style-->
    <% flash.each do |name, msg| %>
	    <% if msg.is_a?(String) %>
	      <div class="alert alert-<%= name.to_s == :notice ? "success" : "danger" %> alert-dismissable">
	        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      </div>
    	<% end %>
  	<% end %>

		<%= yield %>
	</div>

	<%= render "layouts/footer" %>

</body>
</html>

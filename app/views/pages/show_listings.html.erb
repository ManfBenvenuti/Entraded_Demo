
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3> <%= listing.category %> </h3>
            <p> <%= number_to_currency(listing.price) %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<div class="row">
  <div class="col-md-6">
  	<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>

	<div class="col-md-6">
		<h3> <%= @listing.short_description %> </h3>

		<p> <strong>Descripción Larga:</strong>
		  <%= @listing.long_description %></p>

		<p> <strong>Clasificación:</strong>
		  <%= @listing.classification %></p>

		<p> <strong>Clave Adjetivo:</strong>
		  <%= @listing.key_definition %></p>

		<p> <strong>Propiedades:</strong>
		  <%= @listing.properties %></p>

		<p> <strong>Marcas:</strong>
		  <%= @listing.brand %></p>

		<p> <strong>Equipos:</strong>
		  <%= @listing.equipment %></p>

		<p> <strong>Otras Descripciones:</strong>
		  <%= @listing.notes %></p>

		<p> <strong>Unidad Medida:</strong>
		  <%= @listing.measurements %></p>

		<p> <strong>Cantidad:</strong>
		  <%= @listing.quantity %></p>

		<p> <strong>Price:</strong>
		  <%= number_to_currency(@listing.price) %></p>
		</br>

		<div class="center">
			<% if current_user != @listing.user %>
      	<%= link_to "Make An Offer", new_listing_order_path(@listing), class: "btn btn-primary" %>
      <% end %>
    </div>

		<% if current_user == @listing.user %>
			<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
		<% end %>
		<%= link_to 'Back', listings_path, class: "btn btn-link" %>
	</div>
</div>
